---
import "../styles/global.css";
//Is neccesary to import, to enable page animations
//It need to be on every page or layout
//Is used on the head tag
import { ClientRouter } from 'astro:transitions';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>LandingShop - Compramos su mercancia de forma internacional</title>
		<ClientRouter />
	</head>
	<body class="bg-gradient-to-b from-gray-700 to-gray-900 to-40% bg-fixed" id="inicio">
		<main class="">
			<slot />
		</main>
	</body>
</html>

<style>
	html{
		scroll-behavior: smooth;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		color: white;
	}
</style>
